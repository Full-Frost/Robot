#include <kipr/botball.h>
//hit black line then stop 
//make turn left shorter
int lMotor = 1;
int rMotor = 3;
int speed = 50;
int speedFast = 100;
int rSpeed = -50; 
int slowSpeed = 5;
int shorterPause = 300;
int shortPausethree = 500;
