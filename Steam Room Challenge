void keepGoing(){
 while (analog(topHattwo)<targetval){
     veerL();
 }
    ao();
    printf("final aproach");
}

void theVeer(){
    printf("enter VEER\n");
    printf("frontsens = %d \n", analog(etFront));
 while (analog(etFront)<targetPipe){   
    forward();
     if (analog(tophat)<graylineFront){
      veerL();   
      printf("veer left");
     }
     if (analog(tophat)>graylineFront){
      veerR();
         printf("veer right");
     }
 }
    printf("exiting the follow line ");
    ao();
}
